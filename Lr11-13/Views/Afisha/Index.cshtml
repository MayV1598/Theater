@model IEnumerable<Lr11_13.Models.Афиша>

@{
    ViewBag.Title = "Index";
}

<h2>Афиша</h2>

<p>
    @Html.ActionLink("Добавить запись", "Create")
</p>

@using (Html.BeginForm("Index", "Afisha", null, FormMethod.Get))
{
    <div class="col-xxl-5 d-flex justify-content-lg-start">
        <p class="m-auto m-lg-1">С</p>
        <input type="date" class="form-control m-auto" name="start">
        <p class="m-auto m-lg-1">По</p>
        <input type="date" class="form-control m-auto" name="end">
        <input type="submit" value="Обновить" class="btn btn-outline-dark m-auto ms-lg-1" />
    </div>
}

<table class="table">
    <tr>
        <th>
            Кол-во билетов
        </th>
        <th>
            Цена билета
        </th>
        <th>
            Дата и время проведения
        </th>
        <th>
            Актер главной роли
        </th>
        <th>
            Название постановки
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Кол_во_билетов)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Цена_билета)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Дата_и_время_проведения)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Роли_актеров.Актеры.Сотрудники.ФИО)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Постановка.Название_постановки)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id_афиши }) |
            @Html.ActionLink("Детали", "Details", new { id=item.id_афиши }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id_афиши })
        </td>
    </tr>
}

</table>
