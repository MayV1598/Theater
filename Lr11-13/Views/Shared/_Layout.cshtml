<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:antiquewhite">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark"@*; style="background-color:burlywood"*@>
        <div class="container">
            @Html.ActionLink("Театр", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Переключить навигацию" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Главное","Index","Home",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Афиша","About","Home",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Контракты","Index","Kontrakti",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Актеры","Index","Akteri",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Постановки","Index","Postanovka",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Роли","Index","Roli",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Сотрудники","Index","Sotrudniki",new { area = "" },new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("ЗП актеров","Index","ZP",new { area = "" },new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
