@model Lr11_13.Models.Роли_актеров

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<div>
    <h4>Роли актеров</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название роли
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Название_роли)
        </dd>

        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Актеры.Сотрудники.ФИО)
        </dd>

